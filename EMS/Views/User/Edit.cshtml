@model UpdateUserDto


<form method="post">
	<div class=" mt-4">
		<div class="row pb-2">
			<h2 class="text-black"> Update Your Profile </h2>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6 mb-2">
			<label for="Name">Name</label>
			<input asp-for="Name" class="form-control" id="name" placeholder="Name">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group col-md-6 mb-2">
			<label for="inputEmail4">Email</label>
			<input asp-for="Email" class="form-control" id="emails" placeholder="Email">
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>

	<div class="form-row ">
		<div class="form-group col-md-8 mb-2">
			<label for="pNumber">Phone Number</label>
			<input asp-for="PhoneNumber" class="form-control" id="pnumber" placeholder="070000000">
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>
		<div class="form-group col-md-8  mb-2">
			<label for="password">Password</label>
			<input type="password" asp-for="Password" class="form-control" id="pass" placeholder="Password">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
	</div>

	
<button type="submit" class="btn btn-primary"> Update </button>

</form>