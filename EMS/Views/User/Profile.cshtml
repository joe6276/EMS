
@model AddUSerDTO

<!-- Profile Section -->
 <div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <img src="https://cdn.pixabay.com/photo/2017/01/31/21/23/avatar-2027366_1280.png" alt="Profile Picture" class="rounded-circle img-thumbnail shadow-sm mb-3"
                 style="width: 150px; height: 150px; object-fit: cover;" />
            <h2 class="fs-4">@Model.Name</h2>
            <p class="text-muted">@Model.Position</p>
            <div class="d-grid gap-2">
                <a asp-controller="User" asp-action="Edit" class="btn btn-primary"> Edit</a> </p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Contact Information</h4>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <strong>Email:</strong> @Model.Email
                        </li>
                        <li class="mb-2">
                            <strong>Contact:</strong> @Model.PhoneNumber
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 

