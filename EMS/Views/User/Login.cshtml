@model LoginRequestDTO

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-black"> Login User</h2>
            <hr />
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group col-md-8 mb-4">
        <label for="exampleInputEmail1" class="mb-2">Email address</label>
        <input asp-for="Username"  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
       
    </div>
    <div class="form-group col-md-8 mb-4">
        <label for="exampleInputEmail1" class="mb-2">Email address</label>
        <label for="exampleInputPassword1">Password</label>
        <input type="password"  asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>


    <div class="row mt-4">
    <div class=" flex flex-row col-md-6">
        <p> Not a Member? <a asp-controller="User" asp-action="Register"> Register</a> </p>
    </div>
    <div class=" flex flex-row col-md-6">
        <p> <a asp-controller="User" asp-action="ForgotPassword"> Forgot Password </a> </p>
    </div>
    </div>
    
</form>